{
  "manifest_version": 3,
  "name": "HTML to Markdown",
  "version": "1.0",
  "description": "Translate a selected HTML text to equivalent markdown format",
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  },

  "background": {
    "service_worker": "service-worker.js"
  },
  
  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage", 
    "activeTab", 
    "scripting",
    "clipboardRead", "clipboardWrite",
    "contextMenus"
  ]
}